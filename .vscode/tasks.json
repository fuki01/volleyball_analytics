{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: g++-11 アクティブなファイルのビルド",
      "command": "/usr/local/bin/g++-11",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}",
        "--target=x86_64-apple-darwin-gnu"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "デバッガーによって生成されたタスク。"
    }
  ],
  "version": "2.0.0"
}